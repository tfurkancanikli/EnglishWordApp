<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/cardview_copy"
    android:backgroundTint="#000000"
    android:padding="10dp">


        <TextView
            android:id="@+id/kelime_Ying"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/drawbleradius"
            android:backgroundTint="@color/DarkGray"
            android:drawableStart="@drawable/english"
            android:gravity="center_vertical"
            android:text="Ingilizce"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/kelime_Ytur"
            app:layout_constraintStart_toStartOf="@+id/kelime_Ytur"
            app:layout_constraintTop_toBottomOf="@+id/yanlisTarihi" />

        <ImageView
            android:id="@+id/kelime_Yimage"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/gallery_icon" />

        <TextView
            android:id="@+id/kelime_Ytur"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/drawbleradius"
            android:backgroundTint="@color/DarkGray"
            android:drawableStart="@drawable/turkiye"
            android:gravity="center_vertical"
            android:text="Türkçe Karşılık"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/kelime_Yimage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kelime_Ying" />

        <TextView
            android:id="@+id/yanlisTarihi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="28.05.2025"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>